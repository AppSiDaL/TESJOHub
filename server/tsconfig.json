{
    "compilerOptions": {
      "lib": ["es6"],
      "moduleDetection": "force",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictPropertyInitialization": true,
      "strictBindCallApply": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "esModuleInterop": true,
      "declaration": true,
      "noImplicitReturns": false,
    }
}